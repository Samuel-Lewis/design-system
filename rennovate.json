{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true,
      "automergeType": "branch",
      "schedule": [
        "every tuesday"
      ],
      "groupName": "all non-major dependencies",
      "groupSlug": "all-non-major-patch"
    }
  ]
}
